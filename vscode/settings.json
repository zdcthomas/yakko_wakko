{
    "editor.tabSize": 2,
    "editor.renderWhitespace": "all",
    "editor.cursorBlinking": "expand",
    "editor.fontLigatures": true,
    "editor.minimap.renderCharacters": false,
    "workbench.colorTheme": "Gruvbox Light Soft",
    "editor.acceptSuggestionOnEnter": "off",
    "files.autoSave": "onFocusChange",
    "search.useIgnoreFiles": false,
    "editor.dragAndDrop": false,
    "window.openFilesInNewWindow": "on",
    "zenMode.centerLayout": false,
    "zenMode.hideTabs": false,
    "debug.allowBreakpointsEverywhere": true,
    "markdown.preview.breaks": true,
    "breadcrumbs.enabled": true,
    "workbench.startupEditor": "welcomePage",
    "terminal.integrated.cursorBlinking": true,

    "vscode-neovim.neovimPath": "/usr/local/bin/nvim",
    "vim.useCtrlKeys": true,
    "vim.insertModeKeyBindingsNonRecursive": [
        {
            "before": ["<C-j>"],
            "after": ["<C-o>","j"]
        },
        {
            "before": ["<C-h>"],
            "after": ["<C-o>","h"]
        },
        {
            "before": ["<C-l>"],
            "after": ["<C-o>","l"]
        },
        {
            "before": ["<C-k>"],
            "after": ["<C-o>","k"]
        }
    ],
    "vim.visualModeKeyBindingsNonRecursive": [
        {
            "before": [
                ">"
            ],
            "commands": [
                "editor.action.indentLines"
            ]
        },
        {
            "before": [
                "<"
            ],
            "commands": [
                "editor.action.outdentLines"
            ]
        },
    {
            "before": [
                "p"
            ],
            "after": [
                "p",
                "g",
                "v",
                "y"
            ]
        }
    ],
    "vim.normalModeKeyBindings": [ 
        {
            "before": [";"],
            "after": [":"]
        },
        {
            "before": ["<Leader>", "w","<Leader>","j"],
            "commands": [":sp"]
        },
        {
            "before": ["<Leader>", "w","<Leader>","l"],
            "commands": [":vsp"]
        },
        {
            "before": ["<Leader>","p","r","y"],
            "commands": [":g/.pry/d"]
        }
    ],
        "[ruby]": { },
    "ruby.specSaveFile": true,
    "editor.fontFamily": "Fira Code",
    "editor.fontWeight": "500",
    "window.zoomLevel": 0,
    "window.title": " ${dirty}~~~~~~~~${rootName}~~~~~~~~ ${dirty}",
    "vim.easymotion": true,
    "vim.useSystemClipboard": true,
    "vim.leader": "<space>",
    "vim.easymotionMarkerFontFamily": "Times new roman",
    "vim.easymotionMarkerFontSize": "16",
    "vim.easymotionMarkerHeight": 20,
    "vim.easymotionMarkerWidthPerChar": 12,
    "vim.debug.loggingLevelForAlert": "debug",
    "vim.easymotionKeys": "asdfjkl;qweruiopzxcvnm",
    "editor.cursorSmoothCaretAnimation": true,
    "zenMode.fullScreen": false,
    "editor.quickSuggestionsDelay": 7,
    "workbench.editor.highlightModifiedTabs": true,
    "workbench.editor.enablePreview": false,
    "vim.visualstar": true,
    "vim.debug.silent": true,
    "files.exclude": {
        "**/.git": false
    },
    "search.exclude": {
        ".git": true,
        "**/.git": true,
        "**/deps": true,
        "**/_build": true,
        "**/.elixir_ls": true
    },
    "vim.neovimPath": "/usr/local/bin/nvim",
    "vim.enableNeovim": true,
    "workbench.panel.defaultLocation": "right",
    "terminal.integrated.rendererType": "canvas",
    "terminal.external.osxExec": "ITerm2.app",
    "vim.vimrc.enable": true,
    "editor.suggestSelection": "first",
    "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue"
    }
